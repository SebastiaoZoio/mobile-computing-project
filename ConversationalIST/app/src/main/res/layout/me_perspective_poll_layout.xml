<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/text_gchat_date_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_poll_me"
        android:layout_width="189dp"
        android:layout_height="198dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#774df2"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_gchat_date_me">

        <RelativeLayout
            android:id="@+id/layout_gchat_container_me"
            android:layout_width="337dp"
            android:layout_height="206dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pollQuest"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="Poll QUestion"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <!-- Options -->

            <TextView
                android:id="@+id/Opt1Txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/pollQuest"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Option1" />

            <TextView
                android:id="@+id/Opt2Txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="73dp"
                android:gravity="center_vertical"
                android:text="Option2" />

            <TextView
                android:id="@+id/Opt3Txt"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="105dp"
                android:gravity="center_vertical"
                android:text="Option3" />

            <TextView
                android:id="@+id/Opt4Txt"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="142dp"
                android:gravity="center_vertical"
                android:text="Option4" />

            <!-- Votes -->

            <TextView
                android:id="@+id/Opt1Votes"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Opt1Txt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/Opt1Txt"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Opt2Votes"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Opt1Votes"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="37dp"
                android:layout_toEndOf="@+id/Opt2Txt"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Opt3Votes"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Opt1Votes"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="74dp"
                android:layout_toEndOf="@+id/Opt3Txt"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Opt4Votes"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Opt1Votes"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:layout_marginTop="111dp"
                android:layout_toEndOf="@+id/Opt4Txt"
                android:text="0"
                android:textSize="20sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_gchat_timestamp_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="#C0C0C0"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_poll_me"
        app:layout_constraintEnd_toStartOf="@+id/card_poll_me" />


</androidx.constraintlayout.widget.ConstraintLayout>